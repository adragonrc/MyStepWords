<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextviewStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#C00000</item>
        <item name="colorControlActivated">#0000C0</item>
    </style>
    <style name="TextViews"  >
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/fond1</item>
    </style>
    <style name="mythema" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="prueba">
        <item name="android:background">@color/fondobtPrueba</item>
        <item name="android:textColor">#B0FFFFFF</item>
        <item name="android:drawableRight">@android:drawable/arrow_down_float</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="myStyleButton">
        <item name="android:background">@color/fondButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableRight">@android:drawable/arrow_down_float</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="myStyleButton2">
        <item name="android:background">@color/fondButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableRight">@android:drawable/arrow_up_float</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
